{
  "name": "git-br",
  "description": "List of local Git repository branches with their descriptions.",
  "version": "0.0.0-semantic-release",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/git-branches.git"
  },
  "bin": {
    "git-br": "./branches.sh"
  },
  "scripts": {
    "test": "istanbul cover _mocha -- --harmony --reporter spec --timeout 5000 --inline-diffs ./test/git-br.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "postinstall" : "git config --global alias.br '!git-br'",
    "postuninstall" : "git config --global --unset alias.br",
    "commit": "commit-wizard"
  },
  "devDependencies": {
    "exeq": "^3.0.0",
    "expect.js": "^0.3.1",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "pre-git": "3.10.0",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": ["npm test"],
      "pre-push": [],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  }
}
